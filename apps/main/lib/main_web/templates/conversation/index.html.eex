<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Conversations for <%= @location.location_name %></h1>
    </div>
</div><!--/.row-->

<div class="row">
    <div class="fixed-table-container">
        <div class="fixed-table-header">
            <table>
            </table>
        </div>
        <div class="fixed-table-body">
            <div class="fixed-table-loading" style="top: 37px; display: none;">
                Loading, please wait…
            </div>
            <table data-toggle="table" data-url="tables/data1.json" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc" class="table table-hover">
                <thead>
                    <tr>
                        <th class="bs-checkbox " style="width: 36px; ">
                            <div class="th-inner ">
                            </div>
                            <div class="fht-cell"></div>
                        </th>
                        <th style="">
                            <div class="th-inner sortable">
                                From
                                <span class="order">
                                    <span class="caret" style="margin: 10px 5px;"></span>
                                </span>
                            </div>
                            <div class="fht-cell"></div>
                        </th>
                        <th style="">
                            <div class="th-inner sortable">
                                Status
                            </div>
                            <div class="fht-cell"></div>
                        </th>
                        <th style="">
                            <div class="th-inner sortable">
                                Started
                            </div>
                            <div class="fht-cell"></div>
                        </th>
                        <th style="">
                            <div class="th-inner sortable">
                                Assigned to
                            </div>
                            <div class="fht-cell"></div>
                        </th>
                        <th style="">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <%= if @conversations == [] do %>
                        <tr class="no-records-found">
                            <td colspan="5">No matching records found</td>
                        </tr>
                    <% end %>
                    <%= for conversation <- @conversations do %>
                        <tr>
                            <td></td>
                            <td><%= conversation.original_number %></td>
                            <td><%= conversation.status %></td>
                            <td><%= conversation.started_at %></td>
                            <%= if conversation.team_member do %> 
                                <td><img src="<%= conversation.team_member.avatar %>" alt="<%= conversation.team_member.user.last_name %>"></td>
                            <% else %>
                                <td>Bot</td>
                            <% end %>
                            <td>
                                <a href="<%= team_location_conversation_conversation_message_path(@conn, :index, @location.team_id, @location.id, conversation.id) %>" class="btn btn-primary">Messages</a>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>


            <a href="<%= team_location_path(@conn, :index, @location.team_id) %>" class="btn btn-primary">Locations</a>
        </div>
    </div>
</div>
