<header class="page-title-bar">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">
                <a href="<%= team_location_conversation_path(@conn, :index, @location.team_id, @location.id) %>"><i class="breadcrumb-icon fa fa-angle-left mr-2"></i>Conversations</a>
            </li>
        </ol>
    </nav>
    <h1 class="page-title">New Conversation</h1>

    <div class="panel-body">
        <section id="base-style" class="card">
            <div class="card-body">
                <%= form_for @changeset, team_location_conversation_path(@conn, :create, @location.team_id, @location.id), fn f -> %>
                    <fieldset>
                        <div class="form-group">
                            <label>To</label>
                            <%= text_input f, :original_number, class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <label>Message</label>
                            <%= textarea f, :message, class: "form-control", place_holder: "Type a message" %>
                        </div>
                        <div class="media mb-1">
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="far fa-paper-plane"></i>
                                    Send Message
                                </button>
                            </div>
                        </div><!-- /.media -->
                    </fieldset>
                <% end %>
            </div>
        </section>
    </div>
</header>
