<div phx-hook="NotificationHook">
    <%= if assigns[:alert] do %>
    <div class="alert alert-info alert-dismissible fade show">
        <div class="notifications">
        <b>New message for
            <%= link @alert.location.location_name, to: "/admin/teams/#{@alert.location.team_id}/locations/#{@alert.location.id}/conversations/#{@alert.convo}/conversation-messages" %>
            location</b>
    </div>
    </div>
    <% end %>
</div>